<Window x:Class="HurtowniaNapojow.Windows.Employee.Panel.Shopping.ShoppingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hurtownia Napojow | Panel Sprzedaży" Height="500" Width="640"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Powrót" Click="MenuBack_Click" HorizontalAlignment="Left" Background="LightGray"/>
            <MenuItem Header="Panel Sprzedawcy" Click="MenuShoppingPanel_Click" HorizontalAlignment="Left" Background="DarkGray"/>
            <MenuItem Header="Panel Magazyniera" Click="MenuWarehousePanel_Click" HorizontalAlignment="Left" />
            <MenuItem Header="Raporty">
            </MenuItem>
            <MenuItem Header="_Wyloguj" Click="MenuLogout_Click" HorizontalAlignment="Right" />
        </Menu>
        <TabControl Margin="0,25,0,0" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Klienci" x:Name="CustomersTab">
                <Grid Background="#FFE5E5E5">
                    <Button Content="_Nowy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,5,0,0" Click="AddNewCustomer_Clicked"/>
                    <Button Content="_Usuń" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="85,5,0,0" Click="DeleteCustomer_Clicked"/>
                    <ComboBox Text="Wybierz filtr" x:Name="CustomersFilterComboBox" HorizontalAlignment="Right" Margin="0,5,210,0" VerticalAlignment="Top" Width="120" Focusable="False" IsEditable="True" IsReadOnly="True">
                        <ComboBoxItem Content="NazwaKlienta"/>
                        <ComboBoxItem Content="NIP"/>
                        <ComboBoxItem Content="NrTelefonu"/>
                        <ComboBoxItem Content="Email"/>
                        <ComboBoxItem Content="UlicaNumer"/>
                        <ComboBoxItem Content="MiastoKod"/>
                    </ComboBox>
                    <TextBox x:Name="CustomersFilterTextBox" HorizontalAlignment="Right" Height="22" Margin="0,5,85,0" VerticalAlignment="Top" Width="120" />
                    <Button Content="_Resetuj" x:Name="CustomersResetButton" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Width="75" Height="22" Click="CustomersResetFilterButton_Click" />                    
                    <DataGrid Margin="0,30,0,0" x:Name="CustomersDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr" Binding="{Binding Identyfikator}" Width="0.025*" />
                            <DataGridTextColumn Header="Nazwa klienta" Binding="{Binding NazwaKlienta}" Width="0.1*" />
                            <DataGridTextColumn Header="NIP" Binding="{Binding NIP}" Width="0.1*" />
                            <DataGridTextColumn Header="Nr Telefonu" Binding="{Binding NrTelefonu}" Width="0.1*" />
                            <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="0.1*" />
                            <DataGridTextColumn Header="Ulica Nr" Binding="{Binding UlicaNumer}" Width="0.1*" />
                            <DataGridTextColumn Header="Kod Miasto" Binding="{Binding MiastoKod}" Width="0.1*" />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="Customers_ShowDetails_Clicked">Szczegóły</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Zakupy" x:Name="ShoppingsTab">
                <Grid Background="#FFE5E5E5">
                    <Button Content="_Nowy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,5,0,0" Click="AddNewCustomerShopping_Clicked"/>
                    <Button Content="_Usuń" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="85,5,0,0" Click="DeleteShopping_Clicked"/>
                    <TextBox x:Name="ShoppingsFilterTextBox" ToolTip="Szukaj" HorizontalAlignment="Right" Height="22" Margin="0,5,85,0" VerticalAlignment="Top" Width="120" />
                    <Button Content="Resetuj" x:Name="ShoppingsResetButton" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Width="75" Height="22" Click="ShoppingsResetFilterButton_Click" />
                    <DataGrid Margin="0,30,0,0" x:Name="ShoppingsDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr" Binding="{Binding Id}" Width="0.025*" />
                            <DataGridTextColumn Header="Nazwa Klienta" Binding="{Binding CustomerName}" Width="0.1*" />
                            <DataGridTextColumn Header="Data złożenia" Binding="{Binding Date}" Width="0.1*" />
                            <DataGridTextColumn Header="Całkowita kwota" Binding="{Binding Price}" Width="0.05*" />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="Shopping_ShowDetails_Clicked">Szczegóły</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>